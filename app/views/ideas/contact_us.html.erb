<% content_for :title do %>
    Contact Us
<% end %>

<h1> contact us </h1>

<%= form_tag do %>
    <%= label_tag "name" %>
    <!-- another way to make name required is have it required on the tag -->
<%#= text_field_tag "name", nil, class: 'sampleclass', required: 'required' %>
    <%= text_field_tag "name", nil, class: 'sampleclass' %><br/>
    <%= label_tag "email address" %>
    <!-- only if user signed is the email field populated, else leave blank -->
    <!-- alternatively, use before_action: authentication for this page, but anyone should be able to use -->
    <%= email_field_tag "email address", if user_signed_in? then current_user.email else "" end %><br/>
    <%= label_tag "comments" %><br/>
    <%= text_field_tag "your comments", nil, style: "width:880px; height:150px;" %> <br/>
    <%= submit_tag "Submit your info" %>
<% end %>

<!-- for debugging show params only on commit  -->

<%# if params[:commit]  %>
    <%#= show_params %>
<%# end %>